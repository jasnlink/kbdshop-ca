<!doctype html>
    <html class="no-js" lang="{{ request.locale.iso_code }}">
        <head>
            <!-- Google tag (gtag.js) -->
            <script async src="https://www.googletagmanager.com/gtag/js?id=G-28GLE9E5RB"></script>
            <script>
            window.dataLayer = window.dataLayer || [];
            function gtag(){dataLayer.push(arguments);}
            gtag('js', new Date());

            gtag('config', 'G-28GLE9E5RB');
            </script>
            <meta charset="utf-8">
            <meta http-equiv="X-UA-Compatible" content="IE=edge">
            <meta name="viewport" content="width=device-width,initial-scale=1">
            <meta name="theme-color" content="">
            <link rel="canonical" href="{{ canonical_url }}">
            <link
                rel="preconnect"
                href="https://cdn.shopify.com"
                crossorigin
            >
            <link rel="stylesheet" href="{{ 'output.css' | asset_url }}">
            <link rel="stylesheet" href="{{ 'glide.core.min.css' | asset_url }}">
    
            <link
                rel="icon"
                type="image/png"
                href="{{ 'favicon.png' | asset_url }}"
            >
    
            {%- unless settings.type_header_font.system? and settings.type_body_font.system? -%}
                <link
                    rel="preconnect"
                    href="https://fonts.shopifycdn.com"
                    crossorigin
                >
            {%- endunless -%}
    
            <title>
                {{ page_title }} &ndash; Plush toys, plushies and squishies.
                {%- if current_tags %}
                    &ndash; tagged "{{ current_tags | join: ', ' }}"
                {%- endif -%}
                {%- if current_page != 1 %}
                    &ndash; Page {{ current_page -}}
                {%- endif -%}
                {%- unless page_title contains shop.name %}
                    &ndash; {{ shop.name -}}
                {%- endunless -%}
            </title>
    
            {% if page_description %}
                <meta name="description" content="{{ page_description | escape }}">
            {% endif %}
    
            {% render 'meta-tags' %}
            <script src="https://unpkg.com/@popperjs/core@2" defer="defer"></script>
            <script type="module" src="{{ 'main.js' | asset_url }}" defer="defer"></script>
            {%- if template == 'index' -%}
                <script src="{{ 'index.js' | asset_url }}" defer="defer">
            {% elsif template == 'product' %}
                <script src="{{ 'product.js' | asset_url }}" defer="defer">
            {% elsif template == 'collection' %}
                <script src="{{ 'index.js' | asset_url }}" defer="defer">
            {%- endif -%}
            {{ content_for_header }}
        </head>
        <body>
            {% render 'fonts' %}
            {% section 'header' %}
            <main
                id="main-content"
                role="main"
                tabindex="-1"
            >
                {% if request.path == '/policies/refund-policy' %}
                    {% section 'policy-refund' %}
                {% elsif request.path contains '/policies/privacy-policy' %}
                    {% section 'policy-privacy' %}
                {% elsif request.path contains '/policies/terms-of-service' %}
                    {% section 'policy-terms' %}
                {% elsif request.path contains '/policies/shipping-policy' %}
                    {% section 'policy-shipping' %}
                {% elsif request.path contains '/policies/contact-information' %}
                    {% section 'policy-contact' %}
                {% else %}
                    {{ content_for_layout }}
                {% endif %}
            </main>
            {% section 'footer' %}
        </body>
    </html>