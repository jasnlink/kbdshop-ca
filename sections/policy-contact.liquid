{% if page.title == blank %}
    {% capture title %}Contact{% endcapture %}
{% else %}
    {% assign title = page.title %}
{% endif %}
{% if page.content == blank %}
    {% capture content %}At plushies.ca, we value your feedback and are committed to providing excellent customer service. We are here to help you with any questions or concerns you may have.{% endcapture %}
{% else %}
    {% assign content = page.content %}
{% endif %}

<div data-no-overlay class="container mx-auto pt-16 pb-20">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-2 lg:gap-12">
        <div class="container mx-auto">
            <h1 class="text-4xl font-bold">{{ title }}</h1>
            <div class="mt-8 text-lg">{{ content }}</div>
            <div class="text-lg">
                <span>Email: <a href="mailto:hello@plushies.ca" class="underline">hello@plushies.ca</a></span>
            </div>
            <div class="mt-8">
                <span class="text-lg font-bold">Let's Hang Out!</span>
            </div>
            <div class="mt-4">
                <div class="inline-flex gap-x-4">
                    <a href="https://www.facebook.com/people/Plushiesca/100089355372931/" class="h-10 w-10 bg-sky-500 rounded-full inline-flex items-center justify-center select-none hover:bg-sky-400 active:bg-sky-600 text-white">
                    {% render 'icon-facebook' %}
                    </a>
                    <a href="https://www.instagram.com/plushies.ca/" class="h-10 w-10 bg-sky-500 rounded-full inline-flex items-center justify-center select-none hover:bg-sky-400 active:bg-sky-600 text-white">
                    {% render 'icon-instagram' %}
                    </a>
                    <a href="https://www.tiktok.com/@plushies.ca" class="h-10 w-10 bg-sky-500 rounded-full inline-flex items-center justify-center select-none hover:bg-sky-400 active:bg-sky-600 text-white">
                    {% render 'icon-tiktok' %}
                    </a>
                </div>
            </div>
        </div>
        <div class="container mx-auto mt-8 lg:mt-0">
            {% form 'contact' %}
                {{ form.errors | default_errors }}
                <div class="flex gap-4 w-full">
                    <div class="mt-4 w-full">
                        <label for="first-name">First name</label>
                        <input type="text" name="contact[first_name]" id="first-name" class="mt-2 w-full py-2 px-2 rounded-md text-black" placeholder="First name" />
                    </div>
                    <div class="mt-4 w-full">
                        <label for="last-name">Last name</label>
                        <input type="text" name="contact[last_name]" id="last-name" class="mt-2 w-full py-2 px-2 rounded-md text-black" placeholder="Last name" />
                    </div>
                </div>
                <div class="mt-4">
                    <label for="phone">Phone number</label>
                    <input type="tel" name="contact[phone]" id="phone" class="mt-2 w-full py-2 px-2 rounded-md text-black" placeholder="+1(123)456-7890" />
                </div>
                <div class="mt-4">
                    <label for="email">Email</label>
                    <input type="email" name="contact[email]" id="email" class="mt-2 w-full py-2 px-2 rounded-md text-black" placeholder="you@example.com" />
                </div>
                <div class="mt-4">
                    <label for="message">Message</label>
                    <textarea name="contact[body]" id="message" class="mt-2 w-full py-2 px-2 rounded-md text-black"></textarea>
                </div>
                <div class="submit">
                    <input type="submit" value="Send" class="mt-1 w-full bg-sky-500 text-white font-semibold py-2 rounded-md text-center cursor-pointer hover:bg-sky-400 active:bg-sky-600" />
                </div>
            {% endform %}
        </div>
    </div>
</div>