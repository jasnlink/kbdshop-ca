<div data-overlay-action class="hidden fixed bottom-0 w-full bg-white py-3 border-t border-gray-400 z-10 px-4 sm:px-8">
    <div class="flex items-center justify-between gap-2">
        <div class="flex flex-col justify-center gap-1">
            <div class="flex gap-1">
                <span data-product-display-price class="text-2xl font-bold">{{ product.selected_or_first_available_variant.price | money_with_currency }}</span>
                <span class="hidden sm:block w-fit h-fit px-2 border border-green-700 font-medium text-center uppercase text-xs text-green-700 bg-green-200 rounded-sm">Free Shipping over {{ 10000 | money_with_currency }}</span>
            </div>
            {% if product.has_only_default_variant == false %}
                <div>
                    {% render 'product.section.variant-selector',
                        type: 'dropdown'
                    %}
                </div>
            {% endif %}
        </div>
        <div>
            {% render 'product.component.add-cart-button',
                button_text: 'Add'
            %}
        </div>
    </div>
</div>