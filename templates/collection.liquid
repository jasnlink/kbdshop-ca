<div id="main-content" class="px-4 sm:px-8 pt-6 pb-6 mx-auto">
    {% paginate collection.products by 20 %}
        <div data-paginated-products class="grid grid-cols-1 sm:grid-cols-2 xl:grid-cols-3 gap-x-6 gap-y-12">
            {% for product in collection.products %}
                {% render 'product-card', product: product %}
            {% endfor %}
        </div>
        <div class="mt-12 text-center flex gap-x-4 justify-center">
            {{- paginate | default_pagination }}
        </div>
    {% endpaginate %}
</div>